<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_outer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/rl_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/rl_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:visibility="gone" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_equilines"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </RelativeLayout>

    <!-- LAYERS BUTTON -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounded_square_right"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:visibility="gone" >

        <ToggleButton
            android:id="@+id/tb_layers"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:textOff="L"
            android:textOn="L"
            android:textSize="30sp" />
    </RelativeLayout>

    <!-- /LAYERS BUTTON -->


    <!-- MENU BUTTON -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/rounded_square_left"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp"
        android:visibility="gone" >

        <ToggleButton
            android:id="@+id/tb_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@layout/menu_button"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <!-- /MENU BUTTON -->


    <!-- VIEWS BUTTON -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/rounded_square_left_bottom"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:visibility="gone" >

        <ToggleButton
            android:id="@+id/tb_views"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:textOff="V"
            android:textOn="V"
            android:textSize="30sp" />
    </RelativeLayout>

    <!-- /VIEWS BUTTON -->


    <!-- ATTRIBUTES BUTTON -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounded_square_right_bottom"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:visibility="gone" >

        <ToggleButton
            android:id="@+id/tb_attributes"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:textOff="A"
            android:textOn="A"
            android:textSize="30sp" />
    </RelativeLayout>

    <!-- /ATTRIBUTES BUTTON -->

</RelativeLayout>